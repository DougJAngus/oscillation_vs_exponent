### Font
font.family : sans-serif
font.sans-serif : arial
font.size : 12

### Text size
figure.titlesize : 18
axes.titlesize : 16
axes.labelsize : 14
xtick.labelsize : 12
ytick.labelsize : 12
legend.fontsize : 12

### white background and facecolor (for dark themes)
figure.facecolor : 'white'
axes.facecolor : 'white'

### Saving
figure.constrained_layout.use : True
savefig.dpi : 300
savefig.format : png
